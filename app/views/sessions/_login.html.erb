<%= form_tag(url_for(sessions_path), :class => 'login_form') do %>  
	<div class="ym-fbox-text">
		<%= label_tag :email %></br>
		<%= text_field_tag :email, params[:email] %>
	</div>

	<div class="ym-fbox-text">
		<%= label_tag :password %></br>
		<%= password_field_tag :password %>
	</div>

	<div class="ym-fbox-text">
		<%= submit_tag "Log in" %>
	</div>

	<div class="new_user">
		<div class="ym-fbox-text">
		<%= link_to "Neues Konto erstellen", new_user_path %>
		</div>
	</div>
<% end %>
