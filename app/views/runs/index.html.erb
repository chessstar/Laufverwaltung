<h1>Läufe von <%= @nickname %></h1>
<div>Deine Gesamtdistanz: <%= number_with_precision(@summe_distance_all) %> km</div>
<div>Gesamtdistanz 2011: <%= number_with_precision(@summe_distance_2011) %> km</div>
<div>Gesamtdistanz 2012: <%= number_with_precision(@summe_distance_2012) %> km</div>
<div>davon gelaufen mit Asics <%= number_with_precision(@distance_mit_schuh) %> km</div>

<%= render 'form_dateselect'%>

<table>
  <tr>
    <th>Distanz</th>
    <th>Laufzeit</th>
    <th>Marke</th>
    <th>Model</th>
    <th>gelaufen am:</th>
    <th>Tempo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @runs.each do |run| %>
  <tr>
    <td><%= number_with_precision run.distance %> km</td>
    <td><%= (Time.mktime(0)+(run.runtime_in_seconds)).strftime("%k:%M:%S") %></td>
    <td><%= run.shoe.brand %></td>
    <td><%= run.shoe.description %></td>
    <td><%= localize run.run_at , form: :short %></td>
    <td><%= (Time.mktime(0)+((run.runtime_in_seconds) / (run.distance))).strftime("%M:%S") %> min/km</td>
    <td><%= link_to 'Details', run %></td>
    <td><%= link_to 'Bearbeiten', edit_run_path(run) %></td>
    <td><%= link_to 'Löschen', run, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<p>
<%= link_to 'Neuer Lauf', new_run_path %> <%= link_to 'Schuhverwaltung', shoes_path %>
</p>
