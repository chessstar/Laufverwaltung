<!DOCTYPE html>
<html>
<head>
  <title>Laufverwaltung</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id='container'>

	<div id='header'>
		<h1>Meine Laufverwaltung</h1>
	</div>

	<div id='content'>
		<% if flash[:notice] %>
			<p id='notice'><%= flash[:notice] %> </p>
		<% end %>
		<% if flash[:alert] %>
			<p id='alert'><%= flash[:alert] %> </p>
		<% end %>
	</div>



	<%= yield %>

	<div id='footer'>
		<% if user_signed_in? %>
			<%= link_to 'logout', logout_path, method: :delete %>
		<% else %>
			<%= link_to 'login', login_path %>
		<% end %>
	</div>

</div>
</body>
</html>
